@{
  ViewData["Title"] = "Giriş Yap"; 
  Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">

<style>
  body {
    background: linear-gradient(to right, #a8e063, #56ab2f);
    min-height: 100vh;
  }

  .login-card {
    max-width: 400px;
    margin: auto;
    margin-top: 5%;
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    padding: 2rem;
  }

  .btn-social {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .btn-google { color: #db4437; border-color: #db4437; }
  .btn-facebook { color: #3b5998; border-color: #3b5998; }
  .btn-twitter { color: #1da1f2; border-color: #1da1f2; }
</style>

<body>
<div class="login-card">
  <h3 class="text-center mb-4 text-success">Giriş Yap</h3>
  <form>
    <div class="mb-3">
      <input type="email" class="form-control" placeholder="E-posta" />
    </div>
    <div class="mb-3">
      <input type="password" class="form-control" placeholder="Şifre" />
    </div>
    <div class="d-grid">
      <button type="submit" class="btn btn-success">Giriş Yap</button>
    </div>
  </form>

  <div class="text-center my-3 text-muted">veya</div>

  <div class="d-grid gap-2">
    <button class="btn btn-outline btn-social btn-google">
      <i class="fab fa-google"></i> Google ile Giriş Yap
    </button>
    <button class="btn btn-outline btn-social btn-facebook">
      <i class="fab fa-facebook-f"></i> Facebook ile Giriş Yap
    </button>
    <button class="btn btn-outline btn-social btn-twitter">
      <i class="fab fa-twitter"></i> Twitter ile Giriş Yap
    </button>
  </div>

  <div class="text-center mt-4">
    <span class="text-muted">Hesabın yok mu?</span>
    <a href="/Home/SignUp" class="text-success text-decoration-none fw-semibold">Kayıt Ol</a>
  </div>
  
</div>

</body>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>